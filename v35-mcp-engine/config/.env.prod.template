# Trinitas v3.5 TRUE - Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# LLM Endpoints
CLAUDE_API_KEY=your_claude_api_key_here
LOCAL_LLM_ENDPOINT=http://your-local-llm-server:1234/v1

# Service URLs (internal Docker network)
REDIS_URL=redis://redis:6379
CLAUDE_MCP_URL=http://claude-mcp:8001
LOCAL_MCP_URL=http://local-mcp:8002
ORCHESTRATOR_URL=http://mcp-orchestrator:8000

# Performance Settings
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=120
CACHE_TTL=7200
RATE_LIMIT=1000

# Resource Limits
MAX_TOKENS_CLAUDE=100000
MAX_TOKENS_LOCAL=32768
MAX_CONTEXT_SIZE=128000

# Security
JWT_SECRET=generate_strong_secret_here
API_KEY=generate_api_key_here
ENABLE_AUTH=true

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=info
GRAFANA_PASSWORD=secure_password_here
PROMETHEUS_RETENTION_DAYS=30

# Database (if using external)
DATABASE_URL=postgresql://user:password@host:5432/trinitas

# Feature Flags
ENABLE_CACHE=true
ENABLE_COMPRESSION=true
ENABLE_PARALLEL_EXECUTION=true
ENABLE_QUALITY_GATES=true
ENABLE_PERFORMANCE_OPTIMIZATION=true

# Model Configuration
CLAUDE_MODEL=claude-3-opus-20240229
LOCAL_MODEL=qwen-coder-32b
EMBEDDING_MODEL=text-embedding-3-large

# Deployment
ENVIRONMENT=production
DEPLOYMENT_REGION=us-east-1
REPLICA_COUNT=3

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30