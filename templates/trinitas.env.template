# Trinitas Environment Configuration Template
# This file should be copied to ~/.claude/trinitas/config/trinitas.env during installation

# =====================================================
# Core Configuration
# =====================================================

# Trinitas installation directory
TRINITAS_HOME="${HOME}/.claude/trinitas"

# Project mode - development or production
TRINITAS_MODE="production"

# Enable development mode features (bypasses some checks)
TRINITAS_DEV_MODE="false"

# =====================================================
# Claude Code Integration
# =====================================================

# Claude Code compatibility mode
# - strict: Requires Claude environment variables (production)
# - relaxed: Uses defaults when Claude env not available (development/maintenance)
TRINITAS_CLAUDE_MODE="relaxed"

# Default values for Claude environment when not provided
# These are used as fallbacks during development/maintenance
TRINITAS_DEFAULT_PROJECT_DIR="${HOME}/workspace"
TRINITAS_DEFAULT_TOOL_NAME="Bash"

# =====================================================
# Parallel Agents Configuration
# =====================================================

# Enable parallel agent execution
TRINITAS_PARALLEL_ENABLED="true"

# Results directory for parallel execution
TRINITAS_RESULTS_DIR="${TRINITAS_HOME}/parallel_results"

# Maximum number of parallel agents
TRINITAS_MAX_PARALLEL_AGENTS="6"

# Parallel execution timeout (seconds)
TRINITAS_PARALLEL_TIMEOUT="300"

# =====================================================
# Security Configuration
# =====================================================

# Safety level: LOW, MEDIUM, HIGH
TRINITAS_SAFETY_LEVEL="HIGH"

# Enable backup before modifications
TRINITAS_BACKUP_ENABLED="true"

# Backup directory
TRINITAS_BACKUP_DIR="${TRINITAS_HOME}/backups"

# =====================================================
# Logging Configuration
# =====================================================

# Log level: DEBUG, INFO, WARNING, ERROR
TRINITAS_LOG_LEVEL="INFO"

# Log directory
TRINITAS_LOG_DIR="${TRINITAS_HOME}/logs"

# Log retention days
TRINITAS_LOG_RETENTION_DAYS="30"

# =====================================================
# Hook Configuration
# =====================================================

# Enable specific hooks
TRINITAS_ENABLE_SAFETY_CHECK="true"
TRINITAS_ENABLE_QUALITY_CHECK="true"
TRINITAS_ENABLE_PROTOCOL_INJECTION="true"

# Hook timeout (seconds)
TRINITAS_HOOK_TIMEOUT="30"