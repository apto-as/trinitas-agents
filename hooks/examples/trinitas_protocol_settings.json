{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/trinitas/hooks/core/trinitas_protocol_injector.sh",
            "description": "Load Trinitas-Core protocol at session start"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/trinitas/hooks/core/trinitas_protocol_injector.sh pre_compact",
            "description": "Inject protocol reminder before compact summary"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "cat ~/.claude/TRINITAS-CORE-PROTOCOL.md 2>/dev/null || echo 'Trinitas-Core: Strategic, Technical, Secure'",
            "description": "Quick protocol reminder before major operations"
          }
        ]
      }
    ]
  }
}