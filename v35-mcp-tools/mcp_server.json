{
  "name": "v35-mcp-tools",
  "version": "3.5.0",
  "description": "Trinitas v3.5 MCP Tools - MCP adapter for Claude Code integration",
  "type": "stdio",
  "command": "python",
  "args": ["-m", "src"],
  "env": {
    "PYTHONPATH": ".",
    "MCP_ENGINE_URL": "http://localhost:8000",
    "MCP_ENGINE_MODE": "hybrid",
    "TRINITAS_MODE": "auto",
    "LOCAL_LLM_ENDPOINT": "http://192.168.99.102:1234/v1/"
  },
  "tools": [
    {
      "name": "trinitas_execute",
      "description": "Execute task with specified Trinitas persona",
      "parameters": {
        "persona": {
          "type": "string",
          "description": "Persona name (springfield, krukai, vector, groza, littara)"
        },
        "task": {
          "type": "string",
          "description": "Task description"
        },
        "context": {
          "type": "object",
          "description": "Optional task context"
        }
      }
    },
    {
      "name": "trinitas_collaborate",
      "description": "Execute task collaboratively with multiple personas",
      "parameters": {
        "task": {
          "type": "string",
          "description": "Task description"
        },
        "personas": {
          "type": "array",
          "description": "List of persona names"
        },
        "mode": {
          "type": "string",
          "description": "Execution mode: sequential or parallel"
        }
      }
    },
    {
      "name": "trinitas_status",
      "description": "Get Trinitas system status",
      "parameters": {}
    }
  ]
}