# ========================================
# Environment Configuration
# ========================================
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# Application Settings
# ========================================
APP_NAME=trinitas-v35-mcp-tools
APP_VERSION=3.5.0
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4
APP_TIMEOUT=60

# ========================================
# Security Settings
# ========================================
# Change these in production!
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com
ALLOWED_HOSTS=your-domain.com,app.your-domain.com,localhost

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://trinitas:your-db-password@postgres:5432/trinitas
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ========================================
# Cache Configuration
# ========================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=3600
CACHE_KEY_PREFIX=trinitas:
CACHE_DIR=/var/cache/trinitas

# Multi-level cache settings
L1_MEMORY_MB=128
L1_MAX_ENTRIES=1000
L2_DISK_MB=1024
ENABLE_DISTRIBUTED_CACHE=true

# ========================================
# Performance Optimization
# ========================================
# Request batching
BATCH_SIZE=10
BATCH_TIMEOUT_MS=100
MAX_MEMORY_MB=512
ENABLE_TOKEN_OPTIMIZATION=true
ENABLE_CONTEXT_CACHING=true
ENABLE_REQUEST_BATCHING=true

# Session management
MIN_POOL_SIZE=5
MAX_POOL_SIZE=50
MAX_WORKERS=20
LOAD_STRATEGY=least_connections

# ========================================
# Monitoring & Metrics
# ========================================
METRICS_ENABLED=true
METRICS_DB_PATH=/var/lib/trinitas/metrics.db
METRICS_RETENTION_DAYS=30
ANOMALY_LOOKBACK_HOURS=24
ANOMALY_SENSITIVITY=2.0

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# ========================================
# Trinitas Persona Configuration
# ========================================
DEFAULT_PERSONA=springfield
ENABLE_PERSONA_SWITCHING=true
PERSONA_CACHE_TTL=3600

# Springfield settings
SPRINGFIELD_PRIORITY=5
SPRINGFIELD_TTL=3600
SPRINGFIELD_WARM_ON_STARTUP=true

# Krukai settings
KRUKAI_PRIORITY=8
KRUKAI_TTL=1800
KRUKAI_WARM_ON_STARTUP=true

# Vector settings
VECTOR_PRIORITY=10
VECTOR_TTL=7200
VECTOR_WARM_ON_STARTUP=false

# ========================================
# Workflow Configuration
# ========================================
ENABLE_WORKFLOW_TEMPLATES=true
WORKFLOW_CACHE_TTL=1800
MAX_WORKFLOW_DURATION=3600
WORKFLOW_CLEANUP_INTERVAL=300

# ========================================
# MCP Server Configuration
# ========================================
MCP_SERVER_ENABLED=true
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001
MCP_SERVER_TIMEOUT=30
MCP_MAX_CONNECTIONS=100

# ========================================
# File Storage
# ========================================
UPLOAD_FOLDER=/var/lib/trinitas/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=txt,json,yaml,yml,md

# ========================================
# External Services
# ========================================
# OpenAI API (if using)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic API (if using)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ========================================
# Notification Settings
# ========================================
# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=trinitas@your-domain.com
SMTP_TO_EMAILS=admin@your-domain.com,ops@your-domain.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts
SLACK_USERNAME=Trinitas Monitor

# Webhook notifications
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_TIMEOUT=10

# ========================================
# Backup Configuration
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ========================================
# SSL/TLS Configuration
# ========================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/trinitas.crt
SSL_KEY_PATH=/etc/ssl/private/trinitas.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt

# ========================================
# Load Balancing
# ========================================
ENABLE_LOAD_BALANCING=true
INSTANCES=local
LOAD_BALANCER_STRATEGY=least_connections

# ========================================
# Resource Limits
# ========================================
MAX_SESSIONS_PER_USER=5
MAX_CONCURRENT_REQUESTS=100
MAX_REQUEST_SIZE_MB=16
MAX_SESSION_DURATION_HOURS=24
MAX_CONTEXT_SIZE_MB=32

# ========================================
# Logging Configuration
# ========================================
LOG_FILE=/var/log/trinitas/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_ROTATION=daily

# Structured logging
LOG_STRUCTURED=true
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_LEVEL=true
LOG_INCLUDE_FUNCTION=true
LOG_INCLUDE_MODULE=true

# ========================================
# Development/Testing (disabled in prod)
# ========================================
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SWAGGER_UI=false
ENABLE_ADMIN_PANEL=false

# ========================================
# Feature Flags
# ========================================
FEATURE_ADVANCED_CACHING=true
FEATURE_SESSION_MIGRATION=true
FEATURE_ANOMALY_DETECTION=true
FEATURE_PREDICTIVE_CACHING=true
FEATURE_AUTO_SCALING=false
FEATURE_DISTRIBUTED_TRACING=false

# ========================================
# Timezone & Localization
# ========================================
TIMEZONE=UTC
LOCALE=en_US.UTF-8
DATE_FORMAT=%Y-%m-%d %H:%M:%S

# ========================================
# Custom Application Settings
# ========================================
# Add your custom settings here
CUSTOM_SETTING_1=value1
CUSTOM_SETTING_2=value2