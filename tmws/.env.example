# TMWS Environment Configuration Template
# Copy this file to .env and update with your values

# Required Environment Variables
TMWS_DATABASE_URL=postgresql://tmws_user:your_secure_password@localhost:5432/tmws
TMWS_SECRET_KEY=your-secret-key-minimum-32-characters-change-in-production
TMWS_ENVIRONMENT=development

# Database Configuration
TMWS_DB_MAX_CONNECTIONS=10
TMWS_DB_ECHO_SQL=false

# API Configuration
TMWS_API_HOST=0.0.0.0
TMWS_API_PORT=8000
TMWS_API_RELOAD=false
TMWS_API_TITLE=TMWS - Trinitas Memory & Workflow Service
TMWS_API_VERSION=1.0.0

# Security Configuration
TMWS_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
TMWS_CORS_CREDENTIALS=true
TMWS_CORS_METHODS=["GET","POST","PUT","DELETE"]
TMWS_CORS_HEADERS=["Content-Type","Authorization"]

# Vectorization Configuration
TMWS_EMBEDDING_MODEL=all-MiniLM-L6-v2
TMWS_VECTOR_DIMENSION=384
TMWS_MAX_EMBEDDING_BATCH_SIZE=32

# Logging Configuration
TMWS_LOG_LEVEL=INFO
TMWS_LOG_FILE=
TMWS_LOG_FORMAT=json

# Cache Configuration
TMWS_CACHE_TTL=3600
TMWS_CACHE_MAX_SIZE=1000

# Rate Limiting Configuration
TMWS_RATE_LIMIT_ENABLED=true
TMWS_RATE_LIMIT_REQUESTS=100
TMWS_RATE_LIMIT_PERIOD=60

# Authentication Configuration
TMWS_JWT_SECRET_KEY=${TMWS_SECRET_KEY}
TMWS_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
TMWS_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
TMWS_JWT_ALGORITHM=HS256

# Session Configuration
TMWS_SESSION_COOKIE_NAME=tmws_session
TMWS_SESSION_COOKIE_HTTPONLY=true
TMWS_SESSION_COOKIE_SECURE=true
TMWS_SESSION_COOKIE_SAMESITE=strict

# Security Headers Configuration
TMWS_SECURITY_HEADERS_ENABLED=true
TMWS_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
TMWS_HSTS_MAX_AGE=31536000

# Brute Force Protection
TMWS_MAX_LOGIN_ATTEMPTS=5
TMWS_LOGIN_LOCKOUT_DURATION=900