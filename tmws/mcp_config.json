{
  "mcpServers": {
    "tmws-unified": {
      "command": "python",
      "args": [
        "-m",
        "tmws.unified_server",
        "--mcp-only",
        "--config",
        "${HOME}/workspace/github.com/apto-as/trinitas-agents/tmws/config/unified_server.yaml"
      ],
      "env": {
        "TMWS_ENVIRONMENT": "development",
        "TMWS_DB_HOST": "localhost",
        "TMWS_DB_PORT": "5432",
        "TMWS_DB_NAME": "tmws",
        "TMWS_DB_USER": "tmws_user",
        "TMWS_DB_PASSWORD": "tmws_password",
        "TMWS_SECRET_KEY": "dev-secret-key-change-in-production",
        "TMWS_AUTH_ENABLED": "false",
        "TMWS_MCP_ENABLED": "true",
        "PYTHONPATH": "${HOME}/workspace/github.com/apto-as/trinitas-agents/tmws:${PYTHONPATH}"
      },
      "name": "TMWS Unified Server (MCP Mode)",
      "description": "Trinitas Memory & Workflow Service with unified database architecture"
    }
  }
}