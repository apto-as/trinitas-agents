# Trinitas v4.0 Configuration
# Memory-focused implementation with optional Local LLM

# Core Mode
TRINITAS_MODE=memory_focused

# Memory Backend
MEMORY_BACKEND=hybrid
REDIS_URL=redis://localhost:6379
CHROMADB_PATH=./chromadb_data
SQLITE_PATH=./sqlite_data.db

# Learning System
LEARNING_ENABLED=true
LEARNING_STORAGE=./learning_data
AUTO_LEARN=true
PATTERN_RECOGNITION=true

# Local LLM Settings (Default: OFF)
LOCAL_LLM_ENABLED=false
LOCAL_LLM_ENDPOINT=http://192.168.99.102:1234/v1/
LOCAL_LLM_MODEL=auto

# Task Distribution (Bellona's domain)
LLM_MAX_PARALLEL_TASKS=3
LLM_PRIORITY_THRESHOLD=0.3
LLM_TASK_TYPES=documentation_generation,code_formatting,simple_analysis,data_transformation

# Seshat Monitoring
SESHAT_REPORTING_INTERVAL=300
SESHAT_AUTO_OPTIMIZE=true

# Logging
LOG_LEVEL=INFO
LOG_PATH=./logs/trinitas_v4.log

# Development
DEBUG=false